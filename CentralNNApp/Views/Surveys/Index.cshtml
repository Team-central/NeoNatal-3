﻿@model IEnumerable<CentralNNApp.Models.Survey>

@{
    ViewBag.Title = "Index";
}

<h2>Current Surveys.</h2>

<p class="create">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th id="created-at">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th id="first-name">
            @Html.DisplayNameFor(model => model.Mother.FirstName)
        </th>
        <th id="last-name">
            @Html.DisplayNameFor(model => model.Mother.LastName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mother.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mother.LastName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) <br />
                @Html.ActionLink("Details", "Details", new { id = item.ID }) <br />
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }


</table>

<p id="confidentiality">This page contains confidential information.</p>
